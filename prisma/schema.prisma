generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id // @id type means its a unique id
  email            String    @unique
  isSubscribed     Boolean   @default(false)
  subscriptionEnds DateTime? // ? tells that its a not a required field
  todos            Todo[]
}

model Todo {
  id        String   @id
  title     String
  completed Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
